# Smart Waste Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/smart_waste_management?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.netlify.app

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# External Services (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Application Settings
DEFAULT_LATITUDE=40.7128
DEFAULT_LONGITUDE=-74.0060
SEARCH_RADIUS_KM=5
MAX_BINS_PER_PAGE=50

# Development Settings (only for local development)
DEV_AUTO_SEED=true
DEV_SAMPLE_DATA=true
